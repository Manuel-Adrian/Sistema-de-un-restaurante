CREATE DATABASE restaurante_1;

CREATE TABLE mesa1 (id int PRIMARY KEY auto_increment,
categoria varchar(50), opt varchar(50),
precio int, fecha_entrada varchar(20), cantidad int,
mesa varchar(20), status varchar(50), subtotal int
);

CREATE TABLE mesa1_respaldo (id int PRIMARY KEY auto_increment,
categoria varchar(50), opt varchar(50),
precio int, fecha_entrada varchar(20), cantidad int,
mesa varchar(20), status varchar(50), subtotal int
);

CREATE TABLE comandas (id int PRIMARY KEY auto_increment,
fecha_entrada varchar(20), monto_pagar int, efectivo int,
cambio int
);

CREATE TABLE inventario(id int PRIMARY KEY auto_increment,
fecha_entrada varchar(20),opt varchar(50), stock_inicial int,
stock_salida int, total_stock int 
);

/* mesa2 */

CREATE TABLE mesa2 (id int PRIMARY KEY auto_increment,
categoria varchar(50), opt varchar(50),
precio int, fecha_entrada varchar(20), cantidad int,
mesa varchar(20), status varchar(50), subtotal int
);

CREATE TABLE mesa2_respaldo (id int PRIMARY KEY auto_increment,
categoria varchar(50), opt varchar(50),
precio int, fecha_entrada varchar(20), cantidad int,
mesa varchar(20), status varchar(50), subtotal int
);


/* mesa3 */

CREATE TABLE mesa3 (id int PRIMARY KEY auto_increment,
categoria varchar(50), opt varchar(50),
precio int, fecha_entrada varchar(20), cantidad int,
mesa varchar(20), status varchar(50), subtotal int
);

CREATE TABLE mesa3_respaldo (id int PRIMARY KEY auto_increment,
categoria varchar(50), opt varchar(50),
precio int, fecha_entrada varchar(20), cantidad int,
mesa varchar(20), status varchar(50), subtotal int
);

CREATE TABLE users(id int PRIMARY KEY auto_increment, 
nombre varchar(20), apellidos varchar(50),
correo varchar(100), contraseña varchar(50),
rol varchar(20)
);

